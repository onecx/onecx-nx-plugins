{
  "name": "nx-plugin",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "nx-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/nx-plugin",
        "main": "nx-plugin/src/index.ts",
        "tsConfig": "nx-plugin/tsconfig.lib.json",
        "assets": [
          "nx-plugin/*.md",
          {
            "input": "./nx-plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./nx-plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./nx-plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./nx-plugin",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./nx-plugin",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "nx-plugin/jest.config.ts"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs nx-plugin {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "release": {
      "executor": "nx-release:build-update-publish",
      "options": {
        "libName": "nx-plugin"
      }
    }
  },
  "tags": []
}
